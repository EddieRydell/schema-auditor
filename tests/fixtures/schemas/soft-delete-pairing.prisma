datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

/// Has deleted_at only (should flag AT_WITHOUT_BY)
model AuditLog {
  id         Int       @id @default(autoincrement())
  action     String
  deleted_at DateTime?
}

/// Has deleted_by only (should flag BY_WITHOUT_AT)
model Comment {
  id         Int     @id @default(autoincrement())
  text       String
  deleted_by String?
}

/// Has both deleted_at and deleted_by (clean — no pairing finding)
model Article {
  id         Int       @id @default(autoincrement())
  title      String
  deleted_at DateTime?
  deleted_by String?
}

/// Has neither (clean — no pairing finding)
model Tag {
  id   Int    @id @default(autoincrement())
  name String @unique
}
