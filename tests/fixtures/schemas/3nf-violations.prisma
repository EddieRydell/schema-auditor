datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Employee {
  id           Int    @id @default(autoincrement())
  name         String
  departmentId Int
  department   Department @relation(fields: [departmentId], references: [id])
  deptName     String
  deptLocation String
}

model Department {
  id        Int    @id @default(autoincrement())
  name      String @unique
  location  String
  employees Employee[]
}
