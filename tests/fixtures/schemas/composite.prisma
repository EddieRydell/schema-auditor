datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id    Int     @id @default(autoincrement())
  title String
  tags  PostTag[]
}

model Tag {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  posts PostTag[]
}

model PostTag {
  postId Int
  tagId  Int
  post   Post @relation(fields: [postId], references: [id])
  tag    Tag  @relation(fields: [tagId], references: [id])

  @@id([postId, tagId])
}
